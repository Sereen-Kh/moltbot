# ============================================
# Twilio WhatsApp Configuration
# ============================================
# Copy to .env and fill with your Twilio credentials
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
# Must be a WhatsApp-enabled Twilio number, prefixed with whatsapp:
TWILIO_WHATSAPP_FROM=whatsapp:+17343367101

# ============================================
# Bot Configuration
# ============================================
# Telegram Bot Token (if using Telegram in addition to WhatsApp)
BOT_TOKEN=your_telegram_bot_token_here
BOT_USERNAME=your_bot_username

# ============================================
# API Keys (Optional - for AI features)
# ============================================
# Anthropic Claude API (if using Claude for processing)
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxx
# OpenAI API (if using for transcription instead of local Whisper)
OPENAI_API_KEY=sk-xxxxxxxxxxxxx

# ============================================
# Video Processing Configuration
# ============================================
# Maximum video size in MB to process
MAX_VIDEO_SIZE_MB=100
# Directory to store temporary downloads
DOWNLOAD_DIR=./downloads
# Whisper model: tiny, base, small, medium, large
# (larger = better quality but slower and more RAM)
WHISPER_MODEL=base
# Enable video transcription feature
ENABLE_VIDEO_TRANSCRIPTION=true

# ============================================
# Server Configuration
# ============================================
PORT=3000
NODE_ENV=development
# Log level: debug, info, warn, error
LOG_LEVEL=info

# ============================================
# Security (Optional)
# ============================================
# Allowed users (comma-separated WhatsApp numbers)
ALLOWED_USERS=
# Rate limiting (requests per minute per user)
RATE_LIMIT_PER_MINUTE=10